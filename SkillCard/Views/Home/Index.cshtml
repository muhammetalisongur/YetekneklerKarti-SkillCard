@using EntityLayer.Concrete;
@model dynamic

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Skills Profile Widget Flat Responsive Widget Template :: w3layouts</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Skills Profile Widget template Responsive, Login form web template,Flat Pricing tables,Flat Drop downs  Sign up Web Templates, Flat Web Templates, Login sign up Responsive web template, SmartPhone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--Custom Theme files-->
    <link href="/ATemplatesFolder/web/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!--//Custom Theme files -->
    <!--web font-->
    <link href='//fonts.googleapis.com/css?family=Questrial' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic' rel='stylesheet' type='text/css'>
    <!--//web font-->
    <!--circle-chart-->
    <script src="/ATemplatesFolder/web/js/jquery-1.11.1.min.js"></script>
    <!--//circle-chart-->
    <!--ResponsiveTabs-->
    <script src="/ATemplatesFolder/web/js/easyResponsiveTabs.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#horizontalTab').easyResponsiveTabs({
                type: 'default', //Types: default, vertical, accordion
                width: 'auto', //auto or any width like 600px
                fit: true   // 100% fit in a container
            });
        });
    </script>
    <!--//ResponsiveTabs-->
</head>
<body>
    <style>

        button {
            background-color: #ff7675;
            color: #2d3436;
            padding: 10px;
            border: 2px #d63031 solid;
            font-size: 1.5em;
            border-radius: 5px;
        }
    </style>
    <!-- main -->
    <div class="main">
        <h1>Yetenek Kartı</h1>

        <div class="main-info w3l">
            <div class="main-row">
                <!-- main-row-one -->
                <div class="profile-grid logo wthree">
                    @foreach (var item in Model.Profiles)
                    {
                        <img src="@item.Image" width="100" height="100" />


                        <h2>

                            @item.UserName <span /> @item.SurName



                        </h2>
                        <p>
                            @item.Message
                        </p>
                    }
                </div>
                <h3 class="title">Yetenekler</h3>
                <div class="col-md-6 skills-right bar_group">


                    @foreach (var item in Model.Skills)
                    {
                        <div class='bar_group__bar thin' label='@item.SkillName &nbsp;&nbsp; @item.SkillValue%' value='@item.SkillValue'></div>
                    }



                </div>
                <!--bar-js-->
                <script src="/ATemplatesFolder/web/js/bars.js"></script>
                <br />
                <br>
                <div class="social-icons agileits">

                    <ul>
                        <li><a href="#"></a></li>
                        <li><a href="#" class="fb"></a></li>
                        <li><a href="#" class="be"></a></li>
                        <li><a href="#" class="gg"></a></li>
                    </ul>
                </div>
                <div class="clear"> </div>
            </div>
        </div>

        <style>
            .button {
                padding: 10px 10px;
                font-size: 24px;
                text-align: center;
                cursor: pointer;
                outline: none;
                color: #fff;
                background-color: #04AA6D;
                border: none;
                border-radius: 15px;
                box-shadow: 0 9px #999;
            }

                .button:hover {
                    background-color: #3e8e41
                }

                .button:active {
                    background-color: #3e8e41;
                    box-shadow: 0 5px #666;
                    transform: translateY(4px);
                }
        </style>
        <a href="~/Profile/Index" style="margin:auto; text-align:center; display:block;">
            <button class="button">Admin Panel</button>
        </a>

        <!-- copyright -->
        <div class="copyright">
            <p> © @DateTime.Now.ToString("yyyy") All rights reserved | Design by <a href="https://muhammetalisongur.com/" target="_blank">Muhammet Ali Songur.</a></p>
        </div>
        <!-- //copyright -->
    </div>
    <!-- main -->

</body>
</html>

